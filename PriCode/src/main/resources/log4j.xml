<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <!-- 控制台 -->
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%15t] [%30.30C{1}] [%3L] %6p - %m %n"/>
            <!-- param name="ConversionPattern" value="%d [%20t] [%7r] [%45C{1}] [%25M] [%3L] %6p - %30.30c - %m %n" / -->
        </layout>
    </appender>

    <!-- 全日志 -->
    <appender name="allLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/export/logs/recroot/all.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p - %m |||| %l%n"/>
        </layout>
    </appender>

    <!-- root日志 -->
    <appender name="rootLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/export/logs/recroot/root.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%30.30C{1}] [%3L] %6p - %m %n"/>
        </layout>
    </appender>
    <appender name="timeoutLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/export/logs/recroot/timeoutLog.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%30.30C{1}] [%3L] %6p - %m %n"/>
        </layout>
    </appender>

    <logger name="org.apache.commons.logging.simplelog.log.httpclient.wire">
        <priority value="DEBUG"/>
        <appender-ref ref="rootLog"/>
    </logger>
    <logger name="org.apache.commons.logging.simplelog.log.org.apache.http">
        <priority value="DEBUG"/>
        <appender-ref ref="rootLog"/>
    </logger>
    <logger name="org.apache.commons.logging.simplelog.log.org.apache.http.headers">
        <priority value="DEBUG"/>
        <appender-ref ref="rootLog"/>
    </logger>
    <root>
        <priority value="ERROR"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="allLog"/>
    </root>
</log4j:configuration>